<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/OptionMenuBackgroud</item>
    </style>

    <style name="OptionMenuBackgroud" parent="Base.Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@android:color/darker_gray</item>
        <item name="android:dropDownHorizontalOffset">50dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
